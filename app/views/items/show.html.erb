<p>
<b><%= @item.name %></b>: 
<%= @item.description %>
<p>

<% if current_user == @user %>
  <%= link_to "Delete this Item", {:user_id => @user.id, :id => @item.id}, :confirm => "Are you sure you want to delete this item?", :method => :delete %>| <%= link_to "Edit Item", edit_user_item_path(@user, @item) %>
<% end %>

<p><%= image_tag( @item.image.url ) %></p>
<p>Tags: <%= raw @item.tag_list.map {|t| link_to t, tag_path(t)}.join(', ') %></p>