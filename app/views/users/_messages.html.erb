<h3><%= @user.username %>'s Messages</h3>
<% if current_user == @user %>
	<div id="message-list">
		<% @user.messages.each do |message| %>
				<div class="message">
					<p style="color:white"><%= message %></p>
					<br>
					<div class="sender">
						<% if message.user != nil %>
						<em> by <%= message.username %></em>
						Added on: <%= message.created_at %>
						<% end %>
						<%= link_to "Delete this message", user_message_path(@user, message), :confirm => "Are you sure you want to delete this message?", :method => :delete %>
					</div>
				</div>
		<% end %>
	</div>	
<% end %>



