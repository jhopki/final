<h1>All Places</h1>
<%= link_to "Add a New Place", new_place_path %>

<h3>Search</h3>
<form>
  <div class="row">
      <div class="large-4 columns">
        <label>
          <%= form_tag("/search/index", method: "get") do %>
            <%= label_tag(:search, "Search for") %>
            <%= text_field_tag(:search) %>
            <%= submit_tag("Search") %>
          <% end %>
        </label>
      </div>
    </div>
</form>



<h3>Bookstores</h3>


  <% @places.each do |place| %>
    <% if place.category == "Books" %>
    <ul><b><%= link_to place.name, place_path(place) %></b></ul>
    <% end %>
  <% end %>

