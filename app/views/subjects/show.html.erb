<%= @subject.name %>




<% if @subject.comments %>
	<table border="1">
		<tr>
			<th>Name</th>
			<th>Joined</th>
			<th>Posts</th>
			<th>Posted on:</th>
		</tr>
		<% @subject.comments.each do |x| %>
			<tr>
				<td><%= link_to x.user.username, user_path(x.user_id) %></td>
				<td><%= display_date(x.user.created_at) %></td>
				<td><%= x.note %></td>
				<td><%= display_date(x.created_at) %></td>
			</tr>
		<% end %>	
	</table>
	<%= form_for [@subject.topic, @subject, @comment] do |f| %>
  				
  					<%= f.file_field :photo %>
       
      				<%= f.text_area :note %>

					<%= f.submit %>
    
	<% end %>
<% end %>



